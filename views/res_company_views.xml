<odoo>
  <!-- Insertamos parámetros en la vista de compañía existente -->
  <record id="view_company_form_transfer_central" model="ir.ui.view">
    <field name="name">res.company.form.transfer.central</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
      <!-- DESPUÉS (seguro en v17) -->
      <xpath expr="//form/sheet" position="inside">
	<group string="Transferencias a Casa Central">
          <field name="central_cash_journal_id"
		 domain="[('type','in',('cash','bank')), ('company_id','=', id)]"/>
          <field name="central_transit_account_id"
		 domain="[('deprecated','=',False), ('company_id','=', id)]"/>
	</group>
      </xpath>
    </field>
  </record>
</odoo>
